<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RecetasActivity">

    <ImageView
            android:layout_width="1018dp"
            android:layout_height="1092dp"
            app:srcCompat="@drawable/background_small"
            android:id="@+id/imageView4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.196"
            app:layout_constraintHorizontal_bias="0.26"/>


    <TextView
            android:text="Nombre de la receta"
            android:layout_width="132dp"
            android:layout_height="42dp"
            android:id="@+id/textView4"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.025"
            app:layout_constraintVertical_bias="0.014"/>
    <TextView
            android:text="TextView"
            android:layout_width="262dp"
            android:layout_height="31dp"
            android:id="@+id/Nreceta"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.973"
            app:layout_constraintVertical_bias="0.027"/>

    <TextView
            android:text="Ingredientes"
            android:layout_width="113dp"
            android:layout_height="36dp"
            android:id="@+id/textView6"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.023"
            app:layout_constraintVertical_bias="0.08"/>
    <TextView
            android:text="TextView"
            android:layout_width="271dp"
            android:layout_height="39dp"
            android:id="@+id/Ningredientes"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.082"/>
    <TextView
            android:text="Receta"
            android:layout_width="125dp"
            android:layout_height="54dp"
            android:id="@+id/textView8"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintVertical_bias="0.186"/>

    <TextView
            android:text="TextView"
            android:layout_width="339dp"
            android:layout_height="582dp"
            android:id="@+id/Nprocedimiento"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.87"/>

    <Button
            android:backgroundTint="@android:color/transparent"
            android:id="@+id/speakerButton"
            android:layout_width="114dp"
            android:layout_height="71dp"
            android:background="@null"
            android:src="@android:drawable/ic_lock_silent_mode_off"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.986"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.015" tools:ignore="SpeakableTextPresentCheck"/>
    <ImageView
            android:layout_width="66dp"
            android:layout_height="61dp" app:srcCompat="@android:drawable/ic_lock_silent_mode_off"
            android:id="@+id/imageView8"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.934" app:layout_constraintVertical_bias="0.027"/>

</androidx.constraintlayout.widget.ConstraintLayout>
